mode: restart
max_exceeded: silent

trigger:
  - platform: mqtt
    topic: "zigbee2mqtt/{{ device_friendly_name }}"

action:
  - variables:
      device_friendly_name: !input device_friendly_name
      payload: "{{ trigger.payload_json }}"
      # Zigbee2mqtt daje wszystko w jednym polu 'action'!
      action: "{{ payload.action | default('') }}"
      logbook_enabled: !input logbook_enabled
      multi_press_enabled: !input multi_press_enabled
      multi_press_delay: !input multi_press_delay
      helper_button_1_counter: !input helper_button_1_last_press
      helper_button_2_counter: !input helper_button_2_last_press
      helper_button_3_counter: !input helper_button_3_last_press
      helper_button_4_counter: !input helper_button_4_last_press
      helper_last_button_pressed: !input helper_last_button_pressed
      last_button_pressed: >
        {%- set helper_state = states(helper_last_button_pressed) -%}
        {{ helper_state | int if is_number(helper_state) else 1 }}
      # Mapuj z nazw zigbee2mqtt na nazwy w blueprincie
      # button_1_press → button_1_short
      # button_1_press_release → button_1_short_release
      # button_1_hold → button_1_long
      # button_1_hold_release → button_1_long_release
      mapped_action: >
        {% set a = action %}
        {% if '_press_release' in a %}
          {{ a.replace('_press_release', '_short_release') }}
        {% elif a.endswith('_press') and not 'double' in a and not 'triple' in a %}
          {{ a.replace('_press', '_short') }}
        {% elif '_hold_release' in a %}
          {{ a.replace('_hold_release', '_long_release') }}
        {% elif a.endswith('_hold') %}
          {{ a.replace('_hold', '_long') }}
        {% else %}
          {{ a }}
        {% endif %}

  - choose:
      - conditions: "{{ logbook_enabled }}"
        sequence:
          - service: logbook.log
            data:
              name: Hue Tap Dial (zigbee2mqtt)
              message: "Device: {{ device_friendly_name }}, Action: {{ action }}, Mapped: {{ mapped_action }}"

  - choose:
      # Button 1 actions - with multi-press support
      - conditions: "{{ mapped_action == 'button_1_short' }}"
        sequence:
          - choose:
              # Multi-press enabled path
              - conditions: "{{ multi_press_enabled and helper_button_1_counter != '' }}"
                sequence:
                  # Zwiększ licznik
                  - service: input_number.set_value
                    target:
                      entity_id: "{{ helper_button_1_counter }}"
                    data:
                      value: "{{ states(helper_button_1_counter) | int(0) + 1 }}"
                  # Czekaj na kolejne kliknięcia
                  - delay:
                      milliseconds: "{{ multi_press_delay }}"
                  # Sprawdź końcową liczbę kliknięć i wywołaj odpowiednią akcję
                  - variables:
                      click_count: "{{ states(helper_button_1_counter) | int(0) }}"
                  - choose:
                      - conditions: "{{ click_count == 1 }}"
                        sequence: !input button_1_short
                      - conditions: "{{ click_count == 2 }}"
                        sequence: !input button_1_double
                      - conditions: "{{ click_count == 3 }}"
                        sequence: !input button_1_triple
                      - conditions: "{{ click_count == 4 }}"
                        sequence: !input button_1_quadruple
                      - conditions: "{{ click_count >= 5 }}"
                        sequence: !input button_1_quintuple
                  # Zresetuj licznik
                  - service: input_number.set_value
                    target:
                      entity_id: "{{ helper_button_1_counter }}"
                    data:
                      value: 0
                  # Zapisz ostatni przycisk
                  - &save_b_1
                    if: ["{{ states(helper_last_button_pressed) != 'unknown'}}"]
                    then:
                      action: input_number.set_value
                      target:
                        entity_id: "{{ helper_last_button_pressed }}"
                      data:
                        value: 1
            # Multi-press disabled - normal behavior
            default:
              - sequence: !input button_1_short
              - *save_b_1
      - conditions: "{{ mapped_action == 'button_1_short_release' }}"
        sequence:
          - sequence: !input button_1_short_release
          - *save_b_1
      - conditions: "{{ mapped_action == 'button_1_long' }}"
        sequence: !input button_1_long
      - conditions: "{{ mapped_action == 'button_1_long_release' }}"
        sequence:
          - sequence: !input button_1_long_release
          - *save_b_1

      # Button 2 actions - with multi-press support
      - conditions: "{{ mapped_action == 'button_2_short' }}"
        sequence:
          - choose:
              - conditions: "{{ multi_press_enabled and helper_button_2_counter != '' }}"
                sequence:
                  - service: input_number.set_value
                    target:
                      entity_id: "{{ helper_button_2_counter }}"
                    data:
                      value: "{{ states(helper_button_2_counter) | int(0) + 1 }}"
                  - delay:
                      milliseconds: "{{ multi_press_delay }}"
                  - variables:
                      click_count: "{{ states(helper_button_2_counter) | int(0) }}"
                  - choose:
                      - conditions: "{{ click_count == 1 }}"
                        sequence: !input button_2_short
                      - conditions: "{{ click_count == 2 }}"
                        sequence: !input button_2_double
                      - conditions: "{{ click_count == 3 }}"
                        sequence: !input button_2_triple
                      - conditions: "{{ click_count == 4 }}"
                        sequence: !input button_2_quadruple
                      - conditions: "{{ click_count >= 5 }}"
                        sequence: !input button_2_quintuple
                  - service: input_number.set_value
                    target:
                      entity_id: "{{ helper_button_2_counter }}"
                    data:
                      value: 0
                  - &save_b_2
                    if: ["{{ states(helper_last_button_pressed) != 'unknown'}}"]
                    then:
                      action: input_number.set_value
                      target:
                        entity_id: "{{ helper_last_button_pressed }}"
                      data:
                        value: 2
            default:
              - sequence: !input button_2_short
              - *save_b_2
      - conditions: "{{ mapped_action == 'button_2_short_release' }}"
        sequence:
          - sequence: !input button_2_short_release
          - *save_b_2
      - conditions: "{{ mapped_action == 'button_2_long' }}"
        sequence: !input button_2_long
      - conditions: "{{ mapped_action == 'button_2_long_release' }}"
        sequence:
          - sequence: !input button_2_long_release
          - *save_b_2

      # Button 3 actions - with multi-press support
      - conditions: "{{ mapped_action == 'button_3_short' }}"
        sequence:
          - choose:
              - conditions: "{{ multi_press_enabled and helper_button_3_counter != '' }}"
                sequence:
                  - service: input_number.set_value
                    target:
                      entity_id: "{{ helper_button_3_counter }}"
                    data:
                      value: "{{ states(helper_button_3_counter) | int(0) + 1 }}"
                  - delay:
                      milliseconds: "{{ multi_press_delay }}"
                  - variables:
                      click_count: "{{ states(helper_button_3_counter) | int(0) }}"
                  - choose:
                      - conditions: "{{ click_count == 1 }}"
                        sequence: !input button_3_short
                      - conditions: "{{ click_count == 2 }}"
                        sequence: !input button_3_double
                      - conditions: "{{ click_count == 3 }}"
                        sequence: !input button_3_triple
                      - conditions: "{{ click_count == 4 }}"
                        sequence: !input button_3_quadruple
                      - conditions: "{{ click_count >= 5 }}"
                        sequence: !input button_3_quintuple
                  - service: input_number.set_value
                    target:
                      entity_id: "{{ helper_button_3_counter }}"
                    data:
                      value: 0
                  - &save_b_3
                    if: ["{{ states(helper_last_button_pressed) != 'unknown'}}"]
                    then:
                      action: input_number.set_value
                      target:
                        entity_id: "{{ helper_last_button_pressed }}"
                      data:
                        value: 3
            default:
              - sequence: !input button_3_short
              - *save_b_3
      - conditions: "{{ mapped_action == 'button_3_short_release' }}"
        sequence:
          - sequence: !input button_3_short_release
          - *save_b_3
      - conditions: "{{ mapped_action == 'button_3_long' }}"
        sequence: !input button_3_long
      - conditions: "{{ mapped_action == 'button_3_long_release' }}"
        sequence:
          - sequence: !input button_3_long_release
          - *save_b_3

      # Button 4 actions - with multi-press support
      - conditions: "{{ mapped_action == 'button_4_short' }}"
        sequence:
          - choose:
              - conditions: "{{ multi_press_enabled and helper_button_4_counter != '' }}"
                sequence:
                  - service: input_number.set_value
                    target:
                      entity_id: "{{ helper_button_4_counter }}"
                    data:
                      value: "{{ states(helper_button_4_counter) | int(0) + 1 }}"
                  - delay:
                      milliseconds: "{{ multi_press_delay }}"
                  - variables:
                      click_count: "{{ states(helper_button_4_counter) | int(0) }}"
                  - choose:
                      - conditions: "{{ click_count == 1 }}"
                        sequence: !input button_4_short
                      - conditions: "{{ click_count == 2 }}"
                        sequence: !input button_4_double
                      - conditions: "{{ click_count == 3 }}"
                        sequence: !input button_4_triple
                      - conditions: "{{ click_count == 4 }}"
                        sequence: !input button_4_quadruple
                      - conditions: "{{ click_count >= 5 }}"
                        sequence: !input button_4_quintuple
                  - service: input_number.set_value
                    target:
                      entity_id: "{{ helper_button_4_counter }}"
                    data:
                      value: 0
                  - &save_b_4
                    if: ["{{ states(helper_last_button_pressed) != 'unknown'}}"]
                    then:
                      action: input_number.set_value
                      target:
                        entity_id: "{{ helper_last_button_pressed }}"
                      data:
                        value: 4
            default:
              - sequence: !input button_4_short
              - *save_b_4
      - conditions: "{{ mapped_action == 'button_4_short_release' }}"
        sequence:
          - sequence: !input button_4_short_release
          - *save_b_4
      - conditions: "{{ mapped_action == 'button_4_long' }}"
        sequence: !input button_4_long
      - conditions: "{{ mapped_action == 'button_4_long_release' }}"
        sequence:
          - sequence: !input button_4_long_release
          - *save_b_4

      # Dial rotations - Right
      - conditions: "{{ action == 'dial_rotate_right_step' }}"
        sequence:
          - choose:
              - conditions: "{{ last_button_pressed == 1 }}"
                sequence: !input clockwise_rotation_step
              - conditions: "{{ last_button_pressed == 2 }}"
                sequence: !input clockwise_rotation_step_2
              - conditions: "{{ last_button_pressed == 3 }}"
                sequence: !input clockwise_rotation_step_3
              - conditions: "{{ last_button_pressed == 4 }}"
                sequence: !input clockwise_rotation_step_4
